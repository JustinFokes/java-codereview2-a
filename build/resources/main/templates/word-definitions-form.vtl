<div id="container">
	<h1>Add a definition to the word $word.getWord()</h1>

	<form action="/definitions" method="post">
	  <input id="wordId" name="wordId" type="hidden" value="$word.getId()">

	  <div class="form-group">
	    <label for="definition">Definition</label>
	    <input id="definition" name="definition" type="text" class="form-control">
	  </div>

	  <button type="submit" class="btn">Add Definition</button>
	</form>
<div id="container">